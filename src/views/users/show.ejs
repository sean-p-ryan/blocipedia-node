<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
        <h1><%= `${currentUser.username}'s profile` %></h1>
        <h2>  <%= currentUser.role %> </h2>

    
          <% if(currentUser.role == 0) { %>
            <div class="payment-option">
                <a href="/users/payment" class="btn btn-lg btn-success">Want to upgrade to premium?/a>
                <strong>It's 15 bucks.</strong>
            </div>
          <% } %>
    
    
          <% if(currentUser.role == 1) { %>
            <form action="/users/<%= currentUser.id %>/updatestandard" method="POST">
               <input type="submit" value="Downgrade your account" class="btn btn-lg btn-warning"/>
            </form>
          <% } %>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
    <script src="https://js.stripe.com/v3/"></script>
</body>

</html>